@{
    ViewBag.Title = "Đổi mật khẩu";
}
@{ var account = CookieHelper.CookieStringToAccount(User.Identity.Name); }
<form method="post" action="~/Account/ChangePassword?accountId=@account.UserName">
    <div class="form-group">
        @Html.ValidationSummary()
    </div>
    <div class="form-group">
        <label>Mật khẩu cũ:</label>
        <input type="password" class="form-control" name="OldPassword" id="OldPassword" autofocus>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        @Html.ValidationMessage("oldpassword", new { @style = "color:#ff000;" })
    </div>
    <div class="form-group">
        <label>Mật khẩu mới:</label>
        <input type="password" class="form-control" name="NewPassword" id="NewPassword">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        @Html.ValidationMessage("newpassword", new { @style = "color:#ff000;" })
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Home/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>

