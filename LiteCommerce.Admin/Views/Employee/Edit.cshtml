@model LiteCommerce.DomainModels.Employee



<form method="post" action="~/Employee/Save">
    <div class="form-group">
        @Html.ValidationSummary()
    </div>
    @Html.HiddenFor(m => m.EmployeeID)
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Họ:</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.LastName)
                <label>Ngày sinh:</label>
                @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control"} )
                @*<input type="date" class="form-control" name="BirthDate" id="BirthDate" value="@Model.BirthDate"><br />*@
                <label>Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-6">
            <label>Tên:</label>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FirstName)
            <label>ảnh:</label>
            @Html.TextBoxFor(m => m.Photo, new { @class = "form-control" })
            <label>Mật khẩu:</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label>Ghi chú:</label>
        @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", @rows = "5"})
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Employee/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>



